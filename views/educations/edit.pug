extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Educations
				small Edit your educations
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Educations
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					if message
						div(class='alert alert-danger')
							p #{message}
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Form Edit Educations
						form(role="form" method="post")
							div(class="box-body")
								div(class="form-group")
									label Title
									input(type="text" class="form-control" id="title" name="title" placeholder="Title" value= education.title)
								div(class="form-group")
									label Institution
									input(type="text" class="form-control" id="institution" name="institution" placeholder="Institution" value= education.institution)
								div(class="form-group")
									label Year
									input(type="text" class="form-control" id="year" name="year" placeholder="Example: 2015-2017" value= education.year)
							div(class="box-footer")
								button(type="submit" class="btn btn-primary") Submit
