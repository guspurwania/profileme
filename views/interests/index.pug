extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Interests
				small List Interests
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Interests
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Interest Listing
						div(class="box-body")
							a(href="interests/add" class="btn btn-primary") 
								i(class="fa fa-plus") 
								span &nbsp; Add Data
							br
							br
							table(class="table table-striped")
								thead
									tr
										th No
										th Interest
										th Action
								tbody
									- var i = 1
									if interests
										each val, index in interests
											tr
												td= i++
												td= val.interest
												td
													h4
														a(href= 'interests/edit/' + index)
															i(class="fa fa-edit")
														span &nbsp; &nbsp;
														a(href= 'interests/delete/' + index)
															i(class="fa fa-trash")