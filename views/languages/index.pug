extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Languages
				small List Languages
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Languages
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Language Listing
						div(class="box-body")
							a(href="languages/add" class="btn btn-primary") 
								i(class="fa fa-plus") 
								span &nbsp; Add Data
							br
							br
							table(class="table table-striped")
								thead
									tr
										th No
										th Language
										th Level
										th Action
								tbody
									- var i = 1
									if languages
										each val, index in languages
											tr
												td= i++
												td= val.language
												td= val.level
												td
													h4
														a(href= 'languages/edit/' + index)
															i(class="fa fa-edit")
														span &nbsp; &nbsp;
														a(href= 'languages/delete/' + index)
															i(class="fa fa-trash")