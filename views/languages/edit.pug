extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Languages
				small Add your languages
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Languages
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					if message
						div(class='alert alert-danger')
							p #{message}
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Form Add Languages
						form(role="form" method="post")
							div(class="box-body")
								div(class="form-group")
									label Language
									input(type="text" class="form-control" id="language" name="language" placeholder="Language" value= language.language)
								div(class="form-group")
									label Level
									input(type="text" class="form-control" id="level" name="level" placeholder="Level" value= language.level)
							div(class="box-footer")
								button(type="submit" class="btn btn-primary") Submit
