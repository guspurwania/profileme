extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Skills & Proficiency
				small Edit your Skills & Proficiency
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Skills & Proficiency
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					if message
						div(class='alert alert-danger')
							p #{message}
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Form Edit Skills & Proficiency
						form(role="form" method="post")
							div(class="box-body")
								div(class="form-group")
									label Skill
									input(type="text" class="form-control" id="skill" name="skill" placeholder="Skill" value= skill.skill)
								div(class="form-group")
									label Value
									div(class="input-group")
										input(type="number" class="form-control" id="value" name="value" placeholder="Percentage" value= skill.value)
										span(class="input-group-addon") %
							div(class="box-footer")
								button(type="submit" class="btn btn-primary") Submit
