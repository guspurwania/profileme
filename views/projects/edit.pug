extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Projects
				small Edit your projects
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Projects
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					if message
						div(class='alert alert-danger')
							p #{message}
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Form Edit Projects
						form(role="form" method="post")
							div(class="box-body")
								div(class="form-group")
									label Project
									input(type="text" class="form-control" id="project" name="project" placeholder="Project" value= project.project)
								div(class="form-group")
									label Description
									textarea(class="form-control" id="description" name="description" placeholder="Project Description" style="height: 100px;") #{project.description}
							div(class="box-footer")
								button(type="submit" class="btn btn-primary") Submit
