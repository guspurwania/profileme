extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Experiences
				small List Experiences
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Experiences
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Experiences Listing
						div(class="box-body")
							a(href="experiences/add" class="btn btn-primary") 
								i(class="fa fa-plus") 
								span &nbsp; Add Data
							br
							br
							table(class="table table-striped")
								thead
									tr
										th No
										th Company
										th Company Address
										th Position
										th Year
										th Action
								tbody
									- var i = 1
									if experiences
										each val, index in experiences
											tr
												td= i++
												td= val.company
												td= val.company_address
												td= val.position
												td= val.year
												td
													h4
														a(href= 'experiences/edit/' + index)
															i(class="fa fa-edit")
														span &nbsp; &nbsp;
														a(href= 'experiences/delete/' + index)
															i(class="fa fa-trash")