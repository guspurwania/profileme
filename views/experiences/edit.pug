extends ../layout/layout.pug

block content	
	div(class='content-wrapper')
		section(class="content-header")
			h1 Experiences
				small Edit your experiences
			ol(class="breadcrumb")
				li
					a(href="dashboard")
						i(class="fa fa-dashboard")
						span  Dashboard
				li(class="active")
					span  Experiences
		section(class="content")
			div(class="row")
				div(class="col-md-12")
					if message
						div(class='alert alert-danger')
							p #{message}
					div(class="box box-primary")
						div(class="box-header with-border")
							h3(class="box-title") Form Edit Experiences
						form(role="form" method="post")
							div(class="box-body")
								div(class="form-group")
									label Company
									input(type="text" class="form-control" id="company" name="company" placeholder="Company" value= experience.company)
								div(class="form-group")
									label Company Address
									input(type="text" class="form-control" id="company_address" name="company_address" placeholder="Company Address" value= experience.company_address)
								div(class="form-group")
									label Position
									input(type="text" class="form-control" id="position" name="position" placeholder="Position" value= experience.position)
								div(class="form-group")
									label Year
									input(type="text" class="form-control" id="year" name="year" placeholder="Example: 2015 - Present" value= experience.year)
								div(class="form-group")
									label Description
									textarea(class="form-control" id="description" name="description" placeholder="Jobs Description" style="height: 100px;") #{experience.description}
							div(class="box-footer")
								button(type="submit" class="btn btn-primary") Submit
